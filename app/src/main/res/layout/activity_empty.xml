<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:divider="@android:drawable/divider_horizontal_bright"
    android:showDividers="beginning|end"
    android:padding="100dp"
    android:layout_height="match_parent">
<TextView
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:textStyle="bold"
    android:textSize="20sp"
    android:text="What is this app?"
    android:layout_height="wrap_content"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:text="This app disconnects any vpn on device when screen turns off, to prevent the bug on some devices when Screen is turned off and VPN is On, when device turns on, device restarts itself."
    android:layout_height="wrap_content"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_marginTop="50dp"
    android:layout_gravity="center"
    android:text="This bug exists on some Sony Android Tv devices.\n I've tested on KD-49x8000G and it works on Android 8"
    android:layout_height="wrap_content"/>
</LinearLayout>